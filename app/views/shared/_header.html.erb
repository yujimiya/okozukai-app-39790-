<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to 'おこずかいかレンダー',"#", class:"top-logo" %>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li class="result" id="totalAmount"><%= "おこずかい合計：" %></li>
      <li class="goal"><%= "おこずかい目標：#{@goal_price}円" %></li>
      <li><%= link_to 'おこずかい設定', new_event_path, class: "event-list" %></li>
    </ul>
    <ul class='lists-right'>
      <%if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li>

        <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout"  %></li>

      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>